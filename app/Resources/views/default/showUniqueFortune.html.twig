{% extends "base.html.twig" %}

{% block title %}Fortunes{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
{% endblock %}

{% block body %}
<div class="container">
	<div class="row">

	    <div class="col-md-3"></div>

	    <div class="col-md-6 uniqueFortune">
	    	{{ include('default/fortune.html.twig') }}
	        {% for comment in item.comments %}
	        	<div class="comment">
		        	<p class="commentDate">{{ comment.createdAt|date('F jS, Y') }}</p>
		        	<p class="commentAuthor">{{ comment.author }}</p>
		        	<p class="commentContent">{{ comment.content }}</p>
	        	</div>
	        {% endfor %}
	    </div>

	    <div class="col-md-3"></div>

	</div>

	<div class="row">

	    <div class="col-md-3"></div>

	    <div class="container-cards col-md-6">
	    	<h2>Comment</h2>
	        <form action="{{ path('uniqueFortune', {id: item.id}) }}" method="POST" novalidate class="form">
				{# {{ form_widget(form) }} #} {# Formulaire avec CSS générique #}
				{{ form_row(form.author, {'attr': {class:"form-control formItem"}}) }}
				{{ form_row(form.content, {'attr': {class:"form-control formItem"}}) }}
				{{ form_row(form.submit, {'attr': {class:"btn btn-default formItem"}}) }}
				{{ form_rest(form) }}
	        </form>
	    </div>

	    <div class="col-md-3"></div>

	</div>
</div>
{% endblock %}