{% extends "base.html.twig" %}

{% block title %}Fortunes{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
{% endblock %}

{% block body %}
<div class="container">
	<div class="row mainBody">

	    <div class="col-md-3"></div>

	    <div class="col-md-6">
		    <div class="topRatedCol moderateCol">
		        <h1 class="topRatedTitle">Unpublished Fortunes</h1>
		        {% for item in unpublishedEntities %}
		            <div class="card">
					    <div class="content">
					        <p class="quote">{{ item.content }}</p>
					        <p class="author">
					        	â€”
					        	<a href="{{ path('byAuthor', {author: item.author}) }}">{{ item.author }}</a>
		            			<a href="{{ path('delete', {id: item.id}) }}" class="more delete">Delete</a>
					        	<span class="more">|</span>
					        	<a href="{{ path('editFortune', {id: item.id}) }}" class="more">Edit</a>
					        	<span class="more">|</span>
		            			<a href="{{ path('publish', {id: item.id}) }}" class="more publish">Publish</a>
					        </p>
					    </div>
		            </div>
		        {% endfor %}
		    </div>
	    </div>

	    <div class="col-md-3"></div>

	</div>
</div>
{% endblock %}